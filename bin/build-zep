#!/bin/bash

# Builds the Zenoss Event Processor (and optionally any dependencies). Supports
# building just the .war file (for most changes this is enough) or the .tar
# distribution (if startup or configuration defaults change).

set -e

args="$@"
build_deps=0
build_type="war"
maven_opts=""
while [ $# -gt 0 ]; do
    arg=$1
    shift
    case "$arg" in
        -deps)
            build_deps=1
            ;;
        -type)
            build_type=$1
            shift
            ;;
        -skiptests)
            maven_opts="-DskipTests=true -DskipITs=true $maven_opts"
            ;;
        *)
            echo "Usage: $0 [-deps] [-skiptests] [-type {war|tar}]"
            exit 1
            ;;
    esac
done

[ $build_deps -eq 1 ] && build-protocols -deps
taropts="zxf"
case `uname -s` in
    Darwin)
        taropts="zxPf"
        ;;
    Linux)
        taropts="zxhf"
        ;;
esac

[ -x "$ZENHOME/bin/zeneventserver" ] && zeneventserver stop
rm -rf $ZENHOME/webapps/zenoss-zep $ZENHOME/webapps/zeneventserver
pushd $ZENSRC/zep > /dev/null
case "$build_type" in
    war)
        echo "Deploying new ZEP war file..."
        mvn $maven_opts -q clean package install
        unzip -q webapp/target/zep-webapp-*.war -d $ZENHOME/webapps/zeneventserver
        ;;
    tar)
        rm -rf $ZENHOME/bin/zenoss-zep* $ZENHOME/bin/zeneventserver* $ZENHOME/etc/zenoss-zep $ZENHOME/etc/zeneventserver $ZENHOME/share/zenoss-zep $ZENHOME/share/zeneventserver
        echo "Deploying new ZEP distribution..."
        mvn $maven_opts -q clean package install
        tar $taropts dist/target/zep-dist-*.tar.gz -C $ZENHOME
        ;;
    *)
        echo "Invalid build type: $build_type"
        exit 1
        ;;
esac
